<%- include('../components/html.ejs') %>
<%- include('../components/header.ejs') %>
<main class="w-full h-full">
    <div class="max-w-limit h-full mx-auto">
        <% categories.forEach(category => { %>
            <div class="flex flex-col my-6">
                <h2 class="text-lg">
                    <strong>
                        <a href="<%= category.url %>"><%= category.name %></a>
                    </strong>
                </h2>
                <p>
                    <strong>Category description: </strong>
                    <%= category.name %>
                </p>
            </div>
            <hr>
        <% }) %>
    </div>
    <div class="max-w-limit h-full mx-auto">
        <% products.forEach(product => { %>
            <div class="flex flex-col my-6">
                <img class="w-36 h-auto" src="<%= product.image %>" width="600" height="600">
                <h2 class="text-lg">
                    <strong>
                        <a href="<%= product.url %>"><%= product.name %></a>
                    </strong>
                </h2>
                <p>
                    <strong>Product Category: </strong>
                    <%= product.category.name %>
                </p>
                <p>
                    <strong>Expansion: </strong>
                    <%= product.edition.name %> - <%= product.expansion.name %> 
                </p>
                <p>
                    <strong>MSRP: </strong>
                    <%= product.msrp %> czk
                </p>
                <p>
                    <strong>Stock: </strong>
                    <%= product.stock %> pcs 
                </p>
                <div>
                    <strong>Description:</strong>
                    <p><%= product.description %><p>
                </div>
                <div>
                    <strong>Contents:</strong>
                    <ul>
                        <% product.contents.forEach(val => { %>
                            <li class="list-disc"><%= val %></li>
                        <% }) %>
                    </ul>
                </div>
            </div>
            <hr>
        <% }) %>
    </div>
</main>
